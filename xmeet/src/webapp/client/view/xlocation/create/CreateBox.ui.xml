<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:p1="urn:import:webapp.client.view.customwidget">
	<ui:style>
		.loading {
			url('xmeet/loading.gif') center no-repeat;
		}
		.skip {
			cursor: pointer;
		}
		.panel {
			max-width: 500px;
			margin: auto;
			width: 100%;
			height: 100%;
		}
	</ui:style>
	<g:FlowPanel styleName="{style.panel}">
		<p1:XTextArea width="100%" ui:field="text"/>
		<g:LayoutPanel width="100%" height="150px" ui:field="searchPanel">
			<g:layer top="51px" bottom="51px" left="0px" width="48px">
				<g:Image width="48px" height="48px" ui:field="back" altText="back" url="xmeet/back.png" addStyleNames="{style.skip}" />
			</g:layer>
			<g:layer top="59px" bottom="59px" left="48px" right="48px">
				<g:Label ui:field="loading" width="32px" height="32px" styleName="{style.loading}" />
			</g:layer>
			<g:layer left="48px" right="48px" top="0px" bottom="0px">
				<p1:ListView ui:field="locations"/>
			</g:layer>
			<g:layer top="51px" bottom="51px" right="0px" width="48px">
				<g:Image width="48px" height="48px" ui:field="next" altText="next" url="xmeet/next.png" addStyleNames="{style.skip}"/>
			</g:layer>
		</g:LayoutPanel>
		<g:LayoutPanel width="100%" height="35px">
			<g:layer right="0px" width="90px" top="0px" bottom="0px">
				<p1:XButton ui:field="newloc" />
			</g:layer>
		</g:LayoutPanel>
		<g:LayoutPanel width="100%" height="25px">
			<g:layer left="0px" width="50px" top="0px" bottom="0px">
				<g:Label ui:field="location"/>
			</g:layer>
			<g:layer top="0px" bottom="0px" right="200px" width="30px">
				<g:Label ui:field="counter"/>
			</g:layer>
			<g:layer right="80px" width="100px" top="0px" bottom="0px">
				<g:ListBox visibleItemCount="1" ui:field="visibility"/>
			</g:layer>
			<g:layer right="0px" width="70px" top="0px" bottom="0px">
				<p1:XButton ui:field="submit" />
			</g:layer>
		</g:LayoutPanel>
		
	</g:FlowPanel>
</ui:UiBinder> 