<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.panel {
			margin-top: 5px;	
		}
		.target {
			float: left;	
			margin-right: 5px;
		}
		.date {
			float: left;
			color: #aaa;
			font-size: 11px;
			margin-top: 2px;
			margin-right: 5px;
		}
		.location {
			display: inline;	
		}
	</ui:style>
	<g:FlowPanel addStyleNames="{style.panel}" >
		<g:Image url="xmeet/target16x16.png" addStyleNames="{style.target}" />
		<g:Label ui:field="date" addStyleNames="{style.date}" />
		<g:Label ui:field="location" addStyleNames="{style.location}" />
	</g:FlowPanel>
</ui:UiBinder> 