<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style type="webapp.client.view.customwidget.XTextBox.XStyle">
		.xTextBox {
		    -moz-border-radius: 7px;
		    -webkit-border-radius: 7px;
			outline: none;
			resize: none;
			color: #000000;
			padding: 5px;
			border: 2px solid #00ff77;
			background-color: #fff;
		}
		.xTextBox:hover {
			border: 2px solid #00e56b;
		}
		.xTextBox:focus{
			border: 2px solid #00ff77;
			-moz-box-shadow: 0 0 5px #0f7;
			-webkit-box-shadow: 0 0 5px #0f7;
			box-shadow: 0 0 5px #0f7;
		}
		.xTtextBoxDark {
			border-radius: 5px;
		    -moz-border-radius: 5px;
		    -webkit-border-radius: 5px;
			color: #000000;
			border: 1px solid #00ff77;
			background-color: #fff;
			outline: none;
			padding: 5px;
		}
		.xTextBoxDark:hover {
			border: 1px solid #00e56b;
		}
		.xTextBoxDark:focus{
			border: 1px solid #00ff77;
			-moz-box-shadow: 0 0 20px #fff;
			-webkit-box-shadow: 0 0 20px #fff;
			box-shadow: 0 0 20px #fff;
		}
		.invalid {
			background: #FFE0E4;
		}
	</ui:style>
	<g:TextBox styleName="{style.xTextBox}" ui:field="input"/>
</ui:UiBinder> 