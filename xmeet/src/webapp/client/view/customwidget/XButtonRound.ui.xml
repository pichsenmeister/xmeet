<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.button {
		    border-radius: 18px;
		    -moz-border-radius: 18px;
		    -webkit-border-radius: 18px;
			color: #000;
			border: 1px solid #00B250;
			font-size: 20px;
			font-weight: bold;
			background-color: #0f7;
			cursor: pointer;
			cursor: hand;
			outline: none;
			text-shadow: 0 1px 0 #CCC;
			padding-left: 8px;
			padding-right: 8px;
			padding-top: 2px;
			padding-bottom: 4px;	
			background-image: linear-gradient(#0f7, #00cc5f);
			background-image: -webkit-linear-gradient(#0f7, #00cc5f);
			background-image: -moz-linear-gradient(#0f7, #00cc5f);
			background-image: -ms-linear-gradient(#0f7, #00cc5f);
			background-image: -o-linear-gradient(#0f7, #00cc5f);
		}
		.button:active {
			border: 1px inset #00b250;
		}
		.button:focus, .button:hover {
			background-color: #00e56b;
			background-image: linear-gradient(#00e56b, #00b250);
			background-image: -ms-linear-gradient(#00e56b, #00b250);
			background-image: -moz-linear-gradient(#00e56b, #00b250);
			background-image: -webkit-linear-gradient(#00e56b, #00b250);
			background-image: -o-linear-gradient(#00e56b, #00b250);
		}
		.button:disabled {
		  border: 1px solid #888;
		  background: #ccc;
		  cursor: default;
		}
	</ui:style>
	<g:Button styleName="{style.button}" ui:field="input" width="35px" height="35px">
	</g:Button>
</ui:UiBinder> 