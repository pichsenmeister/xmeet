<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:p1="urn:import:webapp.client.view.customwidget">
	<ui:style>
		.xevent {
		  padding: 10px;
		  margin-bottom: 10px;
		  border-bottom: 1px solid #ccc;
		}
		.xeventImage {
		  cursor: pointer;
		  cursor: hand;
		}
		.xeventUserHover:hover .xeventUser {
			text-decoration: underline;
		}
		.xeventUser {
			float: left;
			font-size: 18px;
			font-weight: bold;
			margin-right: 8px;
			cursor: pointer;
			cursor: hand;
		}
		.xeventName {
			padding-top: 5px;
			padding-bottom: 1px;
			color: #888;
			cursor: pointer;
			cursor: hand;
		}
		.description {
			margin-top: 10px;
		}
	</ui:style>
	<g:FlowPanel styleName="{style.xevent}">
	<g:LayoutPanel height="65px">
		<g:layer top="0px" height="64px" left="0px" width="64px">
			<g:Image ui:field="profilePicture" width="64px" height="64px" addStyleNames="{style.xeventImage}"/>
		</g:layer>
		<g:layer left="70px" top="0px" height="25px" right="0px">
			<g:FlowPanel ui:field="userLink" styleName="{style.xeventUserHover}">
				<g:Label ui:field="username" styleName="{style.xeventUser}"/>
				<g:Label ui:field="name" styleName="{style.xeventName}"/>
			</g:FlowPanel>
		</g:layer>
	</g:LayoutPanel>
	<g:Label ui:field="description" styleName="{style.description}"/>
	<p1:ListView ui:field="timeList"/>
	<g:DisclosurePanel open="true" width="100%" ui:field="newTime">
		<g:header>New DisclosurePanel</g:header>
	</g:DisclosurePanel>
	</g:FlowPanel>
</ui:UiBinder> 