<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.xeventImage {
		  width: 64px;
		  height: 64px;
		  float: left;
		  margin-right: 5px;
		  cursor: pointer;
		  cursor: hand;
		}
		.xeventUserHover:hover .xeventUser {
			text-decoration: underline;
		}
		.xeventUser {
			float: left;
			font-size: 18px;
			font-weight: bold;
			margin-right: 8px;
			cursor: pointer;
			cursor: hand;
		}
		.xeventName {
			padding-top: 5px;
			padding-bottom: 1px;
			color: #888;
			cursor: pointer;
			cursor: hand;
		}
		.xeventDate {
			margin-top: 13px;
			margin-right: 10px;
			color: #888;
			font-size: 16px;
			font-weight: bold;
			float: left;
		}
		.xeventTime {
			margin-top: 13px;
			color: #888;
			font-size: 16px;
			font-weight: bold;
		}
	</ui:style>
	<g:FlowPanel>
		<g:Image styleName="{style.xeventImage}" ui:field="image" />
		<g:FlowPanel styleName="{style.xeventUserHover}" ui:field="userlink">
			<g:Label styleName="{style.xeventUser}" ui:field="username" />
			<g:Label styleName="{style.xeventName}" ui:field="name" />
		</g:FlowPanel>
		<g:Label ui:field="date" styleName="{style.xeventDate}"/>
		<g:Label styleName="{style.xeventTime}" ui:field="time"/>
	</g:FlowPanel>
</ui:UiBinder> 