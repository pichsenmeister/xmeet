<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.panel {
			cursor: pointer;
			background: #FFF6D6;
	 		border-radius: 5px;
    		-moz-border-radius: 5px;
    		-webkit-border-radius: 5px;
    		-o-border-radius: 5px;
    		margin-bottom: 3px;
		}
		.panel:hover {
			background: #FFF2BF;
		}
		.profilePicture {
			cursor: pointer;
		}
		.name {
			cursor: pointer;
			overflow: hidden;
			text-overflow: ellipsis;			
		}
		.name:hover {
			text-decoration: underline;
		}
		.pm {
			cursor: pointer;
		}
	</ui:style>
	<g:LayoutPanel width="100%" height="40px" ui:field="panel" styleName="{style.panel}">
		<g:layer top="4px" bottom="4px" left="10px" width="32px">
			<g:Image width="32px" height="32px" ui:field="profilePicture" styleName="{style.profilePicture}"/>
		</g:layer>
		<g:layer left="50px" right="10px" top="10px" bottom="10px">
			<g:Label ui:field="name" styleName="{style.name}"/>
		</g:layer>
	</g:LayoutPanel>
</ui:UiBinder> 