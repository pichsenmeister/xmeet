<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.mainPanel {
			top: 0px;
    		bottom: 0px;
		}	
		.top {
			position: fixed;
			top: 0px;
			height: 40px;
			width: 100%;
		}	
		.content {
			background: #FFFFFF;
			border-radius: 10px;
			-webkit-border-radius: 10px;
			-moz-border-radius: 10px;
			-o-border-radius: 10px;
			margin: 0 auto;
			-moz-box-shadow: 0 0 15px #888;
		    -webkit-box-shadow: 0 0 15px #888;
		    box-shadow: 0 0 15px #888;
		    position: relative;
		    top: 55px;
		    width: 95%;
		    max-width: 980px;
		}
		.left {
			padding: 15px;
			width: 70%;
		}
		.right {
			padding: 15px;
			width: 30%;
		}
		.bottom {
			clear: left;
			position: relative;
			bottom: 0px;
			width: 100%;
			margin: 0 20px;
			height: 30px;	
			text-align: center;
			border-top: 1px solid #ccc;
		}
	</ui:style>
	<g:FlowPanel styleName="{style.mainPanel}">
		<g:SimplePanel ui:field="top" styleName="{style.top}"/>
		<g:FlowPanel styleName="{style.content}">
			<g:SimplePanel ui:field="left" styleName="{style.left}"/>
			<g:SimplePanel ui:field="right" styleName="{style.right}"/>
			<g:SimplePanel ui:field="bottom" styleName="{style.bottom}"/>
		</g:FlowPanel>
	</g:FlowPanel>
</ui:UiBinder> 