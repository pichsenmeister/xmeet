<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.entry {
		  padding: 10px;
		  min-height: 68px;
		  border-bottom: 1px solid #ccc;
		}
		.image {
		  cursor: pointer;
		  cursor: hand;
		  width: 48px;
		  height: 48px;
		  position: absolute;
		}
		.textPanel {
			position: relative;
			margin-left: 60px;
		}
		.user:hover {
			text-decoration: underline;
		}
		.user {
			font-size: 14px;
			font-weight: bold;
			cursor: pointer;
			cursor: hand;
			max-width: 85%;
		}
		.description {
			word-wrap: break-word;
			margin-right: 25px;
			color: #555;
		}
		.time {
			position: absolute;
			right: 0px;
			top: 0px;
			font-size: 12px;
			color: #ccc;
		}
	</ui:style>
	<g:FlowPanel styleName="{style.entry}">
		<g:Image ui:field="profilePicture" addStyleNames="{style.image}" />
		<g:FlowPanel ui:field="userLink" styleName="{style.textPanel}">
				<g:Label ui:field="name" styleName="{style.user}"/>
				<g:Label ui:field="description" styleName="{style.description}"/>
				<g:Label ui:field="time" styleName="{style.time}" text="1h"/>
		</g:FlowPanel>
	</g:FlowPanel>
</ui:UiBinder> 